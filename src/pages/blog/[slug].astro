---
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (async () => {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const { Content } = await post.render();

/* Data afișată pentru cititori */
const formattedDate = new Date(post.data.date).toLocaleDateString('ro-RO', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

/* Date ISO pentru Google */
const publishedDate = new Date(post.data.date).toISOString();
const modifiedDate = new Date(post.data.date).toISOString();

/* Imagine articol (pentru SEO + JSON-LD) */
const articleImage = post.data.cover_image
  ? `https://aurelianepuras.github.io${post.data.cover_image}`
  : undefined;

/* Date normalizate pentru JSON-LD Article */
const articleHeadline = post.data.title;
const articleDescription = post.data.description || post.data.meta_description;
const articleAuthor = post.data.author || 'Aurelian Epuraș';

const articleJsonBase = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': `https://aurelianepuras.github.io/blog/${post.slug}/`
  },
  headline: articleHeadline,
  author: {
    '@type': 'Person',
    '@id': 'https://aurelianepuras.github.io/#person'
  },
  publisher: {
    '@type': 'Person',
    '@id': 'https://aurelianepuras.github.io/#person'
  },
  datePublished: publishedDate,
  dateModified: modifiedDate,
  inLanguage: 'ro-RO'
};

const articleJson: Record<string, unknown> = { ...articleJsonBase };

if (articleDescription) {
  articleJson.description = articleDescription;
}

if (articleImage) {
  articleJson.image = articleImage;
}

const hasRequiredArticleData =
  Boolean(articleHeadline && publishedDate && articleAuthor);

/* Articole similare */
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter((p) => p.slug !== post.slug)
  .sort(() => Math.random() - 0.5)
  .slice(0, 3);
---

<Layout
  title={post.data.meta_title || `${post.data.title} | Blog Aurelian Epuraș`}
  description={post.data.meta_description || post.data.description}
  image={articleImage}
  imageAlt={post.data.title}
>
  <!-- JSON-LD Article: DOAR pe pagina de articol -->
  {hasRequiredArticleData && (
  <script
    type="application/ld+json"
    slot="head"
    set:html={JSON.stringify(articleJson)}
  />
)}

  <article class="pt-12 pb-10 bg-ivory dark:bg-navy-deep">
    <div class="container mx-auto px-4 max-w-5xl">
      <header class="mb-0">
        <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl text-center text-navy dark:text-ivory-light mb-8 leading-tight">
          {post.data.title}
        </h1>

        <div class="flex flex-wrap items-center justify-center gap-4 text-navy/60 dark:text-ivory-light/60 mb-12 text-sm md:text-base">
          <span>{post.data.author}</span>
          <span class="hidden md:inline">•</span>
          <time>{formattedDate}</time>
          <span class="hidden md:inline">•</span>
          <a
            href="/blog"
            class="hover:text-navy dark:hover:text-ivory-light transition-colors font-medium"
          >
            ← înapoi la blog
          </a>
        </div>

        {post.data.cover_image && (
          <img
            src={post.data.cover_image}
            alt={post.data.title}
            class="w-full rounded-2xl shadow-lg mb-10"
          />
        )}

        {post.data.description && (
          <p class="text-lg text-center text-navy/70 dark:text-ivory-light/70 max-w-3xl mx-auto leading-relaxed mb-0">
            {post.data.description}
          </p>
        )}
      </header>

      <div class="prose prose-lg dark:prose-invert max-w-full overflow-x-hidden prose-img:rounded-2xl">
        <Content />
      </div>
    </div>
  </article>

  <section class="pt-4 pb-20">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="border-t border-navy/10 dark:border-ivory-light/10 mb-8"></div>

      <h2 class="font-serif text-4xl md:text-5xl text-center text-navy dark:text-ivory-light mb-12">
        Articole similare
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {relatedPosts.map((relatedPost) => (
          <BlogCard
            title={relatedPost.data.title}
            slug={relatedPost.slug}
            description={relatedPost.data.description}
            cover_image={relatedPost.data.cover_image}
            author={relatedPost.data.author}
            date={new Date(relatedPost.data.date)}
          />
        ))}
      </div>
    </div>
  </section>
</Layout>