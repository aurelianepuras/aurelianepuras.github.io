---
import ThemeToggle from '../components/ThemeToggle';
import ScrollToTop from '../components/ScrollToTop';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
}

const {
  title = 'Aurelian Epuraș | Pianist Compozitor',
  description = 'Sper ca experiența de aici să-ți ofere exact ce cauți. Acest site este o carte de vizită digitală',
  image = '/uploads/images/Aurelian-Epuras.jpg',
  imageAlt = 'Portret Aurelian Pianist'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentPath = Astro.url.pathname;

const isActive = (path: string) => {
  if (path === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(path);
};
