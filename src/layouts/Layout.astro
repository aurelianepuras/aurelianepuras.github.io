---
import ThemeToggle from '../components/ThemeToggle';
import ScrollToTop from '../components/ScrollToTop';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  robots?: string;
}

const {
  title = 'Aurelian Epuraș | Pianist Compozitor',
  description = 'Muzica este felul meu de a vorbi cu lumea. Te invit în universul meu artistic să asculți compozițiile mele și să descoperi povestea din spatele fiecărei note.',
  image = '/uploads/images/Aurelian-Epuras.jpg',
  imageAlt = 'Aurelian Epuraș - Portret Pianist Compozitor',
  robots
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentPath = Astro.url.pathname;

const absoluteImage = image.startsWith('http') 
  ? image 
  : new URL(image, Astro.site).toString();

const isActive = (path: string) => {
  if (path === '/') return currentPath === '/';
  return currentPath.startsWith(path);
};
---

<!doctype html>
<html lang="ro">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=EB+Garmond:wght@400;500;600;700&family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    {robots && <meta name="robots" content={robots} />}

    <slot name="head" />

    <meta property="og:type" content="website" />
    <meta property="og:locale" content="ro_RO" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteImage} />
    <meta property="og:image:alt" content={imageAlt} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteImage} />
    <meta name="twitter:image:alt" content={imageAlt} />

    <script is:inline>
      const savedTheme = localStorage.getItem('theme');
      const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      const theme = savedTheme || systemTheme;
      document.documentElement.classList.toggle('dark', theme === 'dark');
    </script>
  </head>
  <body class="font-sans bg-ivory dark:bg-navy-deep text-navy dark:text-ivory-light transition-colors min-h-screen flex flex-col">
    <header class="sticky top-0 z-50 bg-ivory/80 dark:bg-navy-deep/80 backdrop-blur-md border-b border-navy/10 dark:border-ivory-light/10">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div>
            <a href="/" class="block text-4xl font-serif font-bold text-navy dark:text-ivory-light hover:text-gold-warm dark:hover:text-gold-bright transition-all duration-300">
              Aurelian Epuraș
            </a>
          </div>

          <div class="hidden md:flex items-center gap-10">
            <a href="/" class={`relative hover:text-gold-warm dark:hover:text-gold-bright transition-all duration-300 after:content-[''] after:absolute after:bottom-0 after:-left-2 after:h-0.5 after:bg-gold-warm dark:after:bg-gold-bright after:transition-all after:duration-300 ${isActive('/') ? 'text-gold-warm dark:text-gold-bright after:w-[calc(100%+1rem)]' : 'after:w-0 hover:after:w-[calc(100%+1rem)]'}`}>Origini</a>
            <a href="/biografie" class={`relative hover:text-gold-warm dark:hover:text-gold-bright transition-all duration-300 after:content-[''] after:absolute after:bottom-0 after:-left-2 after:h-0.5 after:bg-gold-warm dark:after:bg-gold-bright after:transition-all after:duration-300 ${isActive('/biografie') ? 'text-gold-warm dark:text-gold-bright after:w-[calc(100%+1rem)]' : 'after:w-0 hover:after:w-[calc(100%+1rem)]'}`}>Biografie</a>
            <a href="/foto" class={`relative hover:text-gold-warm dark:hover:text-gold-bright transition-all duration-300 after:content-[''] after:absolute after:bottom-0 after:-left-2 after:h-0.5 after:bg-gold-warm dark:after:bg-gold-bright after:transition-all after:duration-300 ${isActive('/foto') ? 'text-gold-warm dark:text-gold-bright after:w-[calc(100%+1rem)]' : 'after:w-0 hover:after:w-[calc(100%+1rem)]'}`}>Foto</a>
            <a href="/video" class={`relative hover:text-gold-warm dark:hover:text-gold-bright transition-all duration-300 after:content-[''] after:absolute after:bottom-0 after:-left-2 after:h-0.5 after:bg-gold-warm dark:after:bg-gold-bright after:transition-all after:duration-300 ${isActive('/video') ? 'text-gold-warm dark:text-gold-bright after:w-[calc(100%+1rem)]' : 'after:w-0 hover:after:w-[calc(100%+1rem)]'}`}>Video</a>
            <a href="/muzica" class={`relative hover:text-gold-warm dark:hover:text-gold-bright transition-all duration-300 after:content-[''] after:absolute after:bottom-0 after:-left-2 after:h-0.5 after:bg-gold-warm dark:after:bg-gold-bright after:transition-all after:duration-300 ${isActive('/muzica') ? 'text-gold-warm dark:text-gold-bright after:w-[calc(100%+1rem)]' : 'after:w-0 hover:after:w-[calc(100%+1rem)]'}`}>Muzică</a>
            <a href="/blog" class={`relative hover:text-gold-warm dark:hover:text-gold-bright transition-all duration-300 after:content-[''] after:absolute after:bottom-0 after:-left-2 after:h-0.5 after:bg-gold-warm dark:after:bg-gold-bright after:transition-all after:duration-300 ${isActive('/blog') ? 'text-gold-warm dark:text-gold-bright after:w-[calc(100%+1rem)]' : 'after:w-0 hover:after:w-[calc(100%+1rem)]'}`}>Blog</a>
            <a href="/contact" class={`relative hover:text-gold-warm dark:hover:text-gold-bright transition-all duration-300 after:content-[''] after:absolute after:bottom-0 after:-left-2 after:h-0.5 after:bg-gold-warm dark:after:bg-gold-bright after:transition-all after:duration-300 ${isActive('/contact') ? 'text-gold-warm dark:text-gold-bright after:w-[calc(100%+1rem)]' : 'after:w-0 hover:after:w-[calc(100%+1rem)]'}`}>Contact</a>
            <ThemeToggle client:load />
          </div>

          <button id="mobile-menu-toggle" aria-label="Deschide meniul" class="md:hidden p-3 flex flex-col items-end justify-center gap-1.5 w-12 h-12 rounded-full bg-ivory-card dark:bg-navy-card">
            <span class="hamburger-line w-6 h-0.5 bg-navy dark:bg-ivory-light rounded-full transition-all duration-300"></span>
            <span class="hamburger-line w-4 h-0.5 bg-navy dark:bg-ivory-light rounded-full transition-all duration-300"></span>
            <span class="hamburger-line w-6 h-0.5 bg-navy dark:bg-ivory-light rounded-full transition-all duration-300"></span>
          </button>
        </div>
      </nav>
    </header>

    <div id="mobile-menu" class="hidden md:hidden fixed inset-0 z-[100] transition-opacity duration-300 opacity-0">
      <div class="absolute inset-0 bg-ivory/95 dark:bg-navy-deep/95 backdrop-blur-md"></div>
      <div id="mobile-menu-content" class="relative h-full flex flex-col">
        <div class="flex items-center justify-end px-6 py-6">
          <button id="mobile-menu-close" aria-label="Închide meniul" class="p-3 rounded-full bg-ivory-card dark:bg-navy-card">
            <svg class="w-6 h-6 text-navy dark:text-ivory-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <nav class="flex-1 flex flex-col items-center justify-center space-y-8 px-6">
          <a href="/" class="menu-link text-4xl font-serif text-navy dark:text-ivory-light">Origini</a>
          <a href="/biografie" class="menu-link text-4xl font-serif text-navy dark:text-ivory-light">Biografie</a>
          <a href="/foto" class="menu-link text-4xl font-serif text-navy dark:text-ivory-light">Foto</a>
          <a href="/video" class="menu-link text-4xl font-serif text-navy dark:text-ivory-light">Video</a>
          <a href="/muzica" class="menu-link text-4xl font-serif text-navy dark:text-ivory-light">Muzică</a>
          <a href="/blog" class="menu-link text-4xl font-serif text-navy dark:text-ivory-light">Blog</a>
          <a href="/contact" class="menu-link text-4xl font-serif text-navy dark:text-ivory-light">Contact</a>
        </nav>
      </div>
    </div>

    <main class="flex-1">
      <slot />
    </main>

    <ScrollToTop client:load />

    <footer class="bg-ivory-card dark:bg-navy-card border-t border-navy/10 dark:border-ivory-light/10">
      <div class="container mx-auto px-4 pt-10 pb-10 text-center md:text-left">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
          <div>
            <h4 class="text-2xl font-bold font-serif text-navy dark:text-ivory-light tracking-wide">Aurelian Epuraș</h4>
            <p class="text-base text-navy/60 dark:text-ivory-light/60 italic mb-4">pianist / compozitor / profesor</p>
            <p class="text-base text-navy/70 dark:text-ivory-light/70 leading-relaxed max-w-sm mx-auto md:mx-0">Acest site este o carte de vizită digitală, construită pentru cei care vor să-mi cunoască drumul prin lumea muzicală.</p>
          </div>

          <div>
            <h4 class="text-2xl font-bold mb-6 font-serif text-navy dark:text-ivory-light tracking-wide">Navigare</h4>
            <div class="grid grid-cols-2 gap-4">
              <ul class="space-y-2 text-base text-navy/70 dark:text-ivory-light/70">
                <li><a href="/" class="hover:text-gold-warm transition-colors">Origini</a></li>
                <li><a href="/muzica" class="hover:text-gold-warm transition-colors">Muzică</a></li>
                <li><a href="/video" class="hover:text-gold-warm transition-colors">Video</a></li>
              </ul>
              <ul class="space-y-2 text-base text-navy/70 dark:text-ivory-light/70">
                <li><a href="/biografie" class="hover:text-gold-warm transition-colors">Biografie</a></li>
                <li><a href="/foto" class="hover:text-gold-warm transition-colors">Foto</a></li>
                <li><a href="/blog" class="hover:text-gold-warm transition-colors">Blog</a></li>
              </ul>
            </div>
          </div>

          <div>
            <h4 class="text-2xl font-bold font-serif text-navy dark:text-ivory-light tracking-wide">Social</h4>
            <div class="flex justify-center md:justify-start gap-4 mt-6">
              <a href="https://www.youtube.com/@aurelianepuras" target="_blank" rel="noopener noreferrer" class="hover:text-gold-warm transition-colors" aria-label="YouTube">YouTube</a>
              <a href="https://www.facebook.com/epurasaurelian" target="_blank" rel="noopener noreferrer" class="hover:text-gold-warm transition-colors" aria-label="Facebook">Facebook</a>
              <a href="https://www.instagram.com/aurelian.epuras/" target="_blank" rel="noopener noreferrer" class="hover:text-gold-warm transition-colors" aria-label="Instagram">Instagram</a>
            </div>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-navy/10 dark:border-ivory-light/10 text-center">
          <p>&copy; {new Date().getFullYear()} Aurelian Epuraș. Toate drepturile rezervate.</p>
        </div>
      </div>
    </footer>

    <style is:global>
      /* Ensure text is legible during font loading */
      html { -webkit-text-size-adjust: 100%; font-display: swap; }
      body.menu-open { overflow: hidden; }
      header nav a::after { bottom: -9px !important; }
    </style>
  </body>
</html>
